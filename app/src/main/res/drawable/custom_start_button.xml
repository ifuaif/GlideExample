<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <!--<corners android:radius="90dp" />-->
            <solid android:color="#2381fd" />
            <stroke
                android:width="2dip"
                android:color="#0367ae" />
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <!--<corners android:radius="1000dp" />-->
            <solid android:color="#3a53a7" />
            <stroke
                android:width="2dip"
                android:color="#0e027e" />
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
        </shape>
    </item>
</selector>